-- // The global settings of the script, Mod detection, Snitch Detection.

local AdminRoles = {"mod","admin","staff","dev","founder","co owner","owner","supervis","manager","management","executive","president","chairman","chairwoman","chairperson","director","creator","tester","senior"};
local Wordlist = {"mod","admin","staff","dev","owner","supervis","manager","president","chairman","chairwoman","chairperson","director","hack","exploit","script","report","cheat","executor","skid","owner","creator","admin","staff","anti","ban","executor","synapse","arceus","xeno","codex","jjsploit"};

local d={NotificationToggler=(getgenv()).Window:GlobalSetting({Name="Notifications",Default=(getgenv()).Window:GetNotificationsState(),Callback=function(d)(getgenv()).Window:SetNotificationsState(d)end}),UIBlurToggle=(getgenv()).Window:GlobalSetting({Name="Acrylic Blur",Default=(getgenv()).Window:GetAcrylicBlurState();Callback=function(d)(getgenv()).Window:SetAcrylicBlurState(d)end});ModeratorDetections=(getgenv()).Window:GlobalSetting({Name="Moderator Detections";Default=(getgenv()).Settings.Security.ModeratorDetections;Callback=function(d)_G.ModeratorDetection=d task.spawn(function()local function d(d)local e=d:GetRoleInGroup(game.CreatorId)for D,N in pairs(AdminRoles)do if string.find(string.lower(e),N)then game.Players.LocalPlayer:Kick("Kicked you because "..(d.Name..(" (Rank: "..(e..") joined your game!"))))return end end for e,D in pairs(game.Teams:GetTeams())do if d.Team==D then for e,N in pairs(AdminRoles)do if string.find(string.lower(D.Name),N)then game.Players.LocalPlayer:Kick("Kicked you because "..(d.Name..(" (Team: "..(D.Name..") joined your game!"))))return end end end end end if _G.GetToggle("ModeratorDetection")==true then for e,D in ipairs(game.Players:GetPlayers())do d(D)end end local e e=game.Players.PlayerAdded:Connect(function(D)if _G.GetToggle("ModeratorDetection")==true then d(D)else e:Disconnect()e=nil end end)end)end}),SnitchDetections=(getgenv()).Window:GlobalSetting({Name="Snitch Detections";Default=(getgenv()).Settings.Security.SnitchDetections;Callback=function(d)_G.SnitchDetection=d local function e(d,e)local D=e:lower()for d,N in ipairs(Wordlist)do if string.find(D,N:lower(),1,true)then game.Players.LocalPlayer:Kick("Someone said: \""..(e.."\""))return true end end return false end local function D(d)if not d then return end d.Chatted:Connect(function(D)if _G.GetToggle("SnitchDetection")then e(d,D)end end)if(game:GetService("TextChatService")).ChatVersion==Enum.ChatVersion.TextChatService then(game:GetService("TextChatService")).OnIncomingMessage:Connect(function(D)if D.TextSource and D.TextSource.UserId==d.UserId then if _G.GetToggle("SnitchDetection")==true then e(d,D.Text)end end end)end end if _G.GetToggle("SnitchDetection")==true then for d,e in ipairs((game:GetService("Players")):GetPlayers())do D(e)end;(game:GetService("Players")).PlayerAdded:Connect(D)end end})}
